<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/fondo_login"

        >
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/logo"
            android:layout_weight="0.4"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:layout_margin="16dp"
                android:src="@drawable/logo_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:layout_margin="16dp"

            android:orientation="vertical"
            android:id="@+id/info"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:background="@color/transparente70"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_usuario"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_margin="16dp"
                    android:singleLine="true"
                    android:hint="Usuario"
                    android:inputType="textAutoCorrect"
                    android:textColorHighlight="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_contra"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:textColor="@color/colorPrimary"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    android:hint="ContraseÃ±a"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:id="@+id/ll_mensaje"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_mensaje"
                        android:textColor="@color/error"
                        android:text="*MENSAJE"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                </LinearLayout>
                <Button
                    android:onClick="btnAccesar"
                    android:id="@+id/btn_accesar"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="Accesar"
                    android:background="@drawable/boton_redondeado"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/icon_login_blanco"
                    android:drawablePadding="8dp"
                    android:paddingRight="16dp"
                    android:paddingLeft="8dp"
                    android:textColor="@color/blanco"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </LinearLayout>






    </LinearLayout>

</android.support.constraint.ConstraintLayout>