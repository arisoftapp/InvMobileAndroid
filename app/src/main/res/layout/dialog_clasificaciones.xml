<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="@string/select_clf"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_margin="@dimen/dialog_select_almacen_margin"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/spn_clf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dialog_select_almacen_margin"
        android:layout_marginRight="@dimen/dialog_select_almacen_margin" />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn_clf"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:text="Clasificaciones"
        android:background="@drawable/boton_redondeado"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_almacen_wt"
        android:drawablePadding="8dp"
        android:paddingRight="16dp"
        android:paddingLeft="8dp"
        android:textColor="@color/blanco"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
